<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/user', book: @book, user: @user %>
    </div>

    <div class="col-xs-9">
      <h1>Books</h1>
      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
            <tr>
              <td><%= link_to attachment_image_tag @user, :profile_image, fallback:"no_image.jpg", size: '40x40' %></td>
              <td><%= link_to book.title, book_path(book) %></td>
              <td><%= book.body %></td>
              <td>
                <div id="favorite-<%= book.id %>">
                  <%= render partial: 'favorites/favorite', locals: { book: book } %>
                </div>
              </td>
              <td>コメント数 : <%= book.book_comments.count %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>




