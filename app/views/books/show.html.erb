<div class="container">
  <p id="notice"><%= notice %></p>
  <div class="row">
    <div class="col-xs-3">
      <%= render 'users/user', book: @book_new, user: @user %>
    </div>

    <div class="col-xs-9">
      <h1>Book detail</h1>
      <table class="table table-inverse">
        <td>
          <%= link_to user_path(@book.user) do %>
            <%= attachment_image_tag @book.user, :profile_image, fallback:"no_image.jpg", size: '40x40' %>
            <div><%= @book.user.name %></div>
          <% end %>
        </td>
        <td><%= link_to @book.title %></td>
        <td><%= @book.body %></td>
        <td>
          <div id="favorite-<%= @book.id %>">
            <%= render partial: 'favorites/favorite', locals: { book: @book } %>
          </div>
        </td>
        <td>コメント数 : <%= @book.book_comments.count %></td>
        <td>
          <% if @book.user == current_user %>
            <td><%= link_to 'Edit', edit_book_path, class: "btn btn-success" %></td>
            <td><%= link_to "Destroy", book_path(@book.id), method: :delete, "data-confirm" => "本当に削除しますか？", class: "btn btn-danger" %></td>
          <% end %>
        </td>
      </table>
      <div id="comments-<%= @book.id %>">
        <%= render partial: 'book_comments/comment', locals: { book: @book, book_comment: @book_comment, book_comments: @book_comments } %>
      </div>
    </div>
  </div>
</div>
